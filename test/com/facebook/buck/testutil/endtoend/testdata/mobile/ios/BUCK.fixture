apple_resource(
    name = "BuckDemoAppResources",
    dirs = [],
    files = glob(["*.png"]),
)

apple_asset_catalog(
    name = "BuckDemoAssetCatalog",
    app_icon = "AppIcon",
    dirs = [
        "Assets.xcassets",
    ],
)

apple_bundle(
    name = "BuckDemoApp",
    binary = ":BuckDemoAppBinary",
    extension = "app",
    info_plist = "//ios/plist:generated_plist",
)

apple_binary(
    name = "BuckDemoAppBinary",
    srcs = glob([
        "*.m",
    ]),
    frameworks = [
        "$SDKROOT/System/Library/Frameworks/Foundation.framework",
        "$SDKROOT/System/Library/Frameworks/UIKit.framework",
    ],
    headers = glob([
        "*.h",
    ]),
    preprocessor_flags = [
        "-fobjc-arc",
        "-Wno-objc-designated-initializers",
    ],
    deps = [
        ":BuckDemoAppResources",
        ":BuckDemoAssetCatalog",
        "//common:hello",
        "//common/js:random-bundle#ios,release",
        "//ios/lib:capitalize",
    ],
)

apple_package(
    name = "BuckDemoAppPackage",
    bundle = ":BuckDemoApp",
)
