android_resource(
    name = "res",
    manifest = "AndroidManifest.xml",
    package = "com.example",
)

android_library(
    name = "lib",
    srcs = glob(["*.java"]),
)

android_aar(
    name = "app",
    manifest_skeleton = "AndroidManifest.xml",
    deps = [
        ":lib",
        ":res",
        "//bar:bar",
        "//foo:foo",
    ],
)

android_aar(
    name = "app-16",
    manifest_skeleton = "AndroidManifest.xml",
    deps = [
        ":lib",
        ":res",
        "//bar:bar-16",
        "//foo:foo-16",
    ],
)
