        ":library_with_exported_linker_flag",
    ],
)

cxx_library(
    name = "library_with_linker_flag",
    srcs = [
        "lib.cpp",
    ],
    linker_flags = [
        "-Wl,--bad-flag",
    ],
)

cxx_library(
    name = "library_with_exported_linker_flag",
    srcs = [
        "lib.cpp",
    ],
    exported_linker_flags = [
        "-Wl,--bad-flag",
    ],
)

cxx_binary(
    name = "binary_with_prebuilt_library_dep",
    srcs = [
        "main.cpp",
    ],
