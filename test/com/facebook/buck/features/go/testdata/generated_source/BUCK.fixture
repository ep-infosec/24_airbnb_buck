go_binary(
    name = "main",
    srcs = [
        ":main.go",
    ],
    deps = [
        ":a",
    ],
)

genrule(
    name = "main.go",
    out = "main.go",
    cmd = "echo 'package main\nimport \"a\"\nfunc main() { a.A() }\n' > $OUT",
)

go_library(
    name = "a",
    package_name = "a",
    srcs = [
        ":a.go",
    ],
)

genrule(
    name = "a.go",
    out = "a.go",
    cmd = "echo 'package a\nfunc A() {}\n' > $OUT",
)
